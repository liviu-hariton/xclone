{% extends 'base.html.twig' %}

{% block title %}Add comment{% endblock %}

{% block bread %}
    → <a href="{{ path('app_micro_post') }}">Posts</a>  → <a href="{{ path('app_micro_post_show', {id: post.id}) }}">{{ post.title }}</a> → Add comment
{% endblock %}

{% block body %}
    {{ include('micro_post/_post.html.twig', { post: post}) }}

    <div class="example-wrapper">
        {{ form_start(form, {'attr': {'novalidate' : 'novalidate'}}) }}
        <div>{{ form_errors(form) }}</div>

        <div>
            {{ form_label(form.text, 'Please enter the comment text', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
            {{ form_widget(form.text, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(form.text) }}

            <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Add comment!</button>
        </div>
        {{ form_end(form) }}

        <p>
            <a href="{{ path('app_micro_post') }}">Back to the posts list</a> |
            <a href="{{ path('app_micro_post_show', {id: post.id}) }}">Back to the post</a> |
            <a href="{{ path('app_micro_post_edit', { 'id': post.id }) }}">Edit post</a>
        </p>
    </div>
{% endblock %}